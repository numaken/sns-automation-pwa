          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              ãƒ©ã‚¤ã‚»ãƒ³ã‚¹ã‚­ãƒ¼
            </label>
            <div className="relative">
              <input
                type="text"
                value={licenseKey}
                onChange={(e) => setLicenseKey(e.target.value.toUpperCase())}
                placeholder="SNS-ENTRY-2024-XXXXXX"
