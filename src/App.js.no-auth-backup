import PostGenerator from './components/PostGenerator';
import SettingsPanel from './components/SettingsPanel';
import './App.css';

// ãƒ©ã‚¤ã‚»ãƒ³ã‚¹èªè¨¼ã‚³ãƒ³ãƒãƒ¼ãƒãƒ³ãƒˆ
const LicenseAuth = ({ onAuthSuccess }) => {
  const [licenseKey, setLicenseKey] = useState('');
  const [isValidating, setIsValidating] = useState(false);
  const [error, setError] = useState('');

  // æœ‰åŠ¹ãªãƒ©ã‚¤ã‚»ãƒ³ã‚¹ã‚­ãƒ¼ï¼ˆè²©å£²æ™‚ã«ç”Ÿæˆãƒ»é…å¸ƒï¼‰
  const validLicenseKeys = [
    'SNS-ENTRY-2024-DEMO01',
    'SNS-ENTRY-2024-DEMO02', 
    'SNS-ENTRY-2024-DEMO03',
    // å®Ÿéš›ã®è²©å£²æ™‚ã¯ãƒ©ãƒ³ãƒ€ãƒ ç”Ÿæˆã—ãŸã‚­ãƒ¼ã‚’è¿½åŠ 
  ];

  const validateLicense = async () => {
    if (!licenseKey.trim()) {
      setError('ãƒ©ã‚¤ã‚»ãƒ³ã‚¹ã‚­ãƒ¼ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');
      return;
    }

    setIsValidating(true);
    setError('');

    await new Promise(resolve => setTimeout(resolve, 1500));

    if (validLicenseKeys.includes(licenseKey.trim())) {
      localStorage.setItem('sns_automation_license', licenseKey.trim());
      localStorage.setItem('sns_automation_license_time', Date.now().toString());
      onAuthSuccess();
    } else {
      setError('ç„¡åŠ¹ãªãƒ©ã‚¤ã‚»ãƒ³ã‚¹ã‚­ãƒ¼ã§ã™ã€‚è³¼å…¥æ™‚ã«é€ä»˜ã•ã‚ŒãŸã‚­ãƒ¼ã‚’ç¢ºèªã—ã¦ãã ã•ã„ã€‚');
    }

    setIsValidating(false);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-4">
      <div className="bg-white rounded-xl shadow-lg p-6 w-full max-w-md">
        <div className="text-center mb-6">
          <Sparkles className="h-12 w-12 text-blue-600 mx-auto mb-3" />
          <h1 className="text-2xl font-bold text-gray-900 mb-2">SNSè‡ªå‹•åŒ–ã‚·ã‚¹ãƒ†ãƒ  Entry</h1>
          <p className="text-gray-600">ãƒ©ã‚¤ã‚»ãƒ³ã‚¹èªè¨¼ãŒå¿…è¦ã§ã™</p>
        </div>

